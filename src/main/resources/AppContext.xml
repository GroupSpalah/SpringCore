<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean name="base" class="org.example.homeworks.anton.hw_02_04.Base">
        <constructor-arg name="math" ref="math"/>
        <constructor-arg name="program" ref="program"/>
    </bean>

    <bean name="math" class="org.example.homeworks.anton.hw_02_04.Math">
        <constructor-arg name="geometry" ref="geometry"/>
    </bean>

</beans>